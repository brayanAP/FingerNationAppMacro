<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FingerNationAppMacro.views.index_configuracion">
    <ContentPage.Content>
        <StackLayout Margin="20" Orientation="Vertical">
            <Label Text="BRAYAN ULISSES ARIAS PEREZ" HorizontalOptions="CenterAndExpand" FontSize="Large" TextColor="Red" FontAttributes="Bold" Margin="10"/>
            <Label Text="Edad:"></Label>
            <Entry x:Name="edad" Keyboard="Numeric"></Entry>
            <Label Text="Altura(cm):"></Label>
            <Entry x:Name="altura" Keyboard="Numeric"></Entry>
            <Label Text="Peso(Kg):"></Label>
            <Entry x:Name="peso" Keyboard="Numeric"></Entry>

            <Button Text="Guardar" Clicked="btn_ClickedSave" BackgroundColor="#212121" HeightRequest="60" TextColor="White" FontAttributes="Bold" FontSize="Large" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>